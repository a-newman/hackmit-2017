{
    "manifest_version": 2,

    "name": "HackMIT2017",

    "description": "Helps block excessive social media usage",
    "version": "1.0",

    "background": {
        "scripts": ["background.js", "lib/jquery.min.js"],
        "persistent": false
    },

    "content_scripts": [
        {
            "js": ["lib/jquery.min.js", "content_script.js"],
            "matches": ["<all_urls>"]
        }
    ],

    "page_action": {
        "default_icon": "pug_favicon.png",
        "default_popup": "popup.html"
    },

    "permissions": [
        "declarativeContent",
        "contextMenus", 
        "tabs",
        "activeTab"
    ]
}
